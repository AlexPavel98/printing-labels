{
  "name": "palm-karofler-labels",
  "version": "1.0.0",
  "description": "Barcode label generation app for Palm Karofler farm",
  "author": "Palm Karofler",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder --win --x64",
    "build:vite": "vite build",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.palmkarofler.labels",
    "productName": "Palm Karofler Labels",
    "copyright": "Copyright Â© 2024 Palm Karofler",
    "asar": true,
    "asarUnpack": [
      "**/better-sqlite3/**",
      "**/*.node"
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico",
      "requestedExecutionLevel": "highestAvailable"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Palm Karofler Labels",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico"
    },
    "publish": null
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "jsbarcode": "^3.11.6",
    "jspdf": "^2.5.1",
    "html2canvas": "^1.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.1",
    "lucide-react": "^0.330.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^28.2.4",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.3",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
